    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimaryPogDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorBottomItem</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PrefsTheme</item>
        <item name="alertDialogTheme">@style/alertDialogThemeCustom</item>
    </style>

    <style name="alertDialogThemeCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="collapse">
        <item name="android:textColor">@color/colorBottomItem</item>
    </style>

    <style name="item_search">
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:shadowColor">@color/colorPrimaryPogDark</item>
        <item name="android:shadowDx">7</item>
        <item name="android:shadowDy">7</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/colorBottomItem</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PrefsTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

    <style name="PopupMenuStyle">
        <item name="android:background">@color/colorPrimaryPogDark</item>
        <item name="android:textColor">@android:color/background_light</item>
    </style>
</resources>
